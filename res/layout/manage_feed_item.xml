<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff">
	<TextView
			android:id="@+id/title_item"
			android:text="@+id/title_item"
			android:textColor="#4d4d4d"
			android:textSize="16sp"
			android:background="#00000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:paddingTop="8dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:maxLines="1"/>
	<TextView
			android:id="@+id/info_item"
			android:text="@+id/info_item"
			android:textColor="#808080"
			android:textSize="12sp"
			android:background="#00000000"
			android:paddingBottom="8dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:layout_below="@+id/title_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

	<ImageView
			android:id="@+id/white_left_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/left_white"
			android:layout_below="@+id/info_item"
			android:layout_alignParentLeft="true"/>

	<ImageView
			android:id="@+id/white_right_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/right_white"
			android:layout_below="@+id/info_item"
			android:layout_alignParentRight="true"/>-

	<ImageView
			android:id="@+id/grey_left_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/left_grey"
			android:layout_below="@+id/white_left_shadow"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"/>

	<ImageView
			android:id="@+id/grey_right_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/right_grey"
			android:layout_below="@+id/white_right_shadow"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"/>

	<ImageView
			android:id="@+id/bottom_centre_shadow"
			android:layout_width="0px"
			android:layout_height="4px"
			android:src="@drawable/bottom_grey"
			android:layout_toLeftOf="@+id/grey_right_shadow"
			android:layout_toRightOf="@+id/grey_left_shadow"
			android:layout_alignParentBottom="true"
			android:scaleType="fitXY"/>
</RelativeLayout>
