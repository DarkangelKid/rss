<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/colour_title"
        android:text="@+id/colour_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/colour_summary"
        android:text="@+id/colour_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="4dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="#323232"
        android:layout_below="@+id/colour_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingStart="24dp"
        android:paddingRight="24dp"
        android:paddingEnd="24dp"
        android:layout_below="@+id/colour_summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/blue_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/colour_blue_light"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/purple_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/colour_purple_light"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/green_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/colour_green_light"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/yellow_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/colour_yellow_light"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/red_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/colour_red_light"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/divider_norm"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingTop="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/divider_settings_light"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
