<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#ffffff">

   <TextView
         android:id="@+id/title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@+id/title"
         android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
         android:textColor="#ff000000"
         android:layout_alignParentTop="true"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:paddingTop="6dp"
         android:maxLines="2"
         android:ellipsize="end"/>

   <TextView
         android:id="@+id/url"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@+id/url"
         android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
          android:textColor="#ff000000"
         android:layout_alignParentLeft="true"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:paddingBottom="2dp"
         android:layout_below="@+id/title"
         android:maxLines="1"
         android:ellipsize="end"/>

   <ImageView
         android:id="@+id/image"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:adjustViewBounds="true"
         android:paddingTop="4dp"
         android:layout_below="@+id/url"
         android:scaleType="centerCrop"/>

   <ImageView
         android:id="@+id/grey_left_shadow"
         android:layout_width="3px"
         android:layout_height="4px"
         android:src="@drawable/left_grey"
         android:layout_below="@+id/image"
         android:layout_toLeftOf="@+id/grey_centre_shadow"
         android:layout_alignParentLeft="true"
         android:layout_alignParentBottom="true"/>

   <ImageView
         android:id="@+id/grey_right_shadow"
         android:layout_width="3px"
         android:layout_height="4px"
         android:src="@drawable/right_grey"
         android:layout_below="@+id/image"
         android:layout_alignParentRight="true"
         android:layout_alignParentBottom="true"/>

   <ImageView
         android:id="@+id/bottom_centre_shadow"
         android:layout_width="fill_parent"
         android:layout_height="4px"
         android:src="@drawable/bottom_grey"
         android:layout_below="@+id/image"
         android:layout_toLeftOf="@+id/grey_right_shadow"
         android:layout_alignParentBottom="true"
         android:scaleType="fitXY"/>

</RelativeLayout>
