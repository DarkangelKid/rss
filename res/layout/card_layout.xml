<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#ffffff">

	<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="4dp"
			android:text="@+id/title"
			android:textSize="18sp"
			android:layout_alignParentTop="true"/>

	<TextView
			android:id="@+id/time"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_marginLeft="8dp"
			android:text="@+id/time"
			android:textSize="12sp"
			android:textColor="#808080"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/title"/>

	<ImageView
			android:id="@+id/image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="96dp"
			android:adjustViewBounds="true"
			android:gravity="bottom"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:paddingBottom="8dp"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/time"/>

	<TextView
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="8dp"
			android:text="@+id/description"
			android:textSize="14sp"
			android:textColor="#4d4d4d"
			android:layout_below="@+id/time"
			android:layout_toRightOf="@+id/image"/>

	<ImageView
			android:id="@+id/white_left_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/left_white"
			android:layout_alignParentLeft="true"
			android:layout_above="@+id/grey_left_shadow"/>

	<ImageView
			android:id="@+id/grey_left_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/left_grey"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"/>

	<ImageView
			android:id="@+id/white_right_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/right_white"
			android:layout_alignParentRight="true"
			android:layout_above="@+id/grey_right_shadow"/>

	<ImageView
			android:id="@+id/grey_right_shadow"
			android:layout_width="3px"
			android:layout_height="4px"
			android:src="@drawable/right_grey"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"/>

	<ImageView
			android:id="@+id/bottom_centre_shadow"
			android:layout_width="fill_parent"
			android:layout_height="4px"
			android:src="@drawable/bottom_grey"
			android:layout_toLeftOf="@+id/grey_right_shadow"
			android:layout_toRightOf="@+id/grey_left_shadow"
			android:layout_marginTop="8dp"
			android:layout_alignParentBottom="true"
			android:scaleType="fitXY"/>

</RelativeLayout> 
