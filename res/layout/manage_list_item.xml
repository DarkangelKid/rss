<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff">
	<TextView
			android:id="@+id/group_item"
			android:text="@+id/group_item"
			android:textColor="#4d4d4d"
			android:textSize="18sp"
			android:background="#00000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/drag_image"
			android:paddingTop="8dp"
			android:paddingLeft="8dp"
			android:maxLines="1"/>
	<TextView
			android:id="@+id/group_feeds"
			android:text="@+id/group_feeds"
			android:textColor="#808080"
			android:textSize="12sp"
			android:background="#00000000"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/group_item"
			android:layout_toLeftOf="@+id/drag_image"
			android:paddingTop="8dp"
			android:paddingLeft="8dp"
			android:paddingBottom="8dp"
			android:maxLines="1"/>
	<ImageView
			android:id="@+id/drag_image"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:src="@drawable/action_drag"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"/>
</RelativeLayout>
