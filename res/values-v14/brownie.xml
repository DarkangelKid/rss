<?xml version="1.0" encoding="utf-8"?>
<resources>
	<color name="custom_theme_color">#00000000</color>
	<color name="action_bar_colour">#ff212021</color>
	<style name="Brownie.Net" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowBackground">@color/custom_theme_color</item>
		<item name="android:actionBarStyle">@style/MyActionBarStyle</item>
	</style>

	<style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/action_bar_colour</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:icon">@drawable/rss_icon</item>
        <item name="android:windowActionBarOverlay">false</item>
		<item name="android:displayOptions">showTitle|showHome|homeAsUp</item>
	</style>
</resources>
