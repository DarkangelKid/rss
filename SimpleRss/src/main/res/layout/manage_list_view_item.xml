<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

   <TextView
      android:id="@+id/first_text"
      android:text="@+id/first_text"
      android:textColor="#4d4d4d"
      android:textSize="16sp"
      android:background="#00000000"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:paddingTop="8dp"
      android:paddingStart="8dp"
      android:paddingLeft="8dp"
      android:paddingEnd="8dp"
      android:paddingRight="8dp"
      android:maxLines="1"/>

   <TextView
      android:id="@+id/second_text"
      android:text="@+id/second_text"
      android:textColor="#808080"
      android:textSize="12sp"
      android:background="#00000000"
      android:paddingBottom="8dp"
      android:paddingLeft="8dp"
      android:paddingStart="8dp"
      android:paddingEnd="8dp"
      android:paddingRight="8dp"
      android:layout_below="@+id/first_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

   <ImageView
      android:id="@+id/white_left_shadow"
      android:layout_width="3px"
      android:layout_height="4px"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/second_text"
      android:src="@drawable/left_white"/>

   <ImageView
      android:id="@+id/white_right_shadow"
      android:layout_width="3px"
      android:layout_height="4px"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/second_text"
      android:src="@drawable/right_white"/>

   <ImageView
      android:id="@+id/grey_left_shadow"
      android:layout_width="3px"
      android:layout_height="4px"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/white_left_shadow"
      android:src="@drawable/left_grey"/>

   <ImageView
      android:id="@+id/grey_centre_shadow"
      android:layout_width="match_parent"
      android:layout_height="4px"
      android:layout_below="@+id/white_left_shadow"
      android:layout_toLeftOf="@+id/grey_right_shadow"
      android:layout_toRightOf="@+id/grey_left_shadow"
      android:scaleType="fitXY"
      android:src="@drawable/bottom_grey"/>


   <ImageView
      android:id="@+id/grey_right_shadow"
      android:layout_width="3px"
      android:layout_height="4px"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/white_right_shadow"
      android:src="@drawable/right_grey"/>

</merge>
