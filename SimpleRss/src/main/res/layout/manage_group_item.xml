<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

   <TextView
      android:id="@+id/tag_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="#00000000"
      android:maxLines="1"
      android:paddingLeft="8dp"
      android:paddingStart="8dp"
      android:paddingTop="8dp"
      android:text="@+id/tag_item"
      android:textColor="#4d4d4d"
      android:textSize="18sp"/>

   <TextView
      android:id="@+id/tag_feeds"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tag_item"
      android:background="#00000000"
      android:maxLines="1"
      android:paddingBottom="8dp"
      android:paddingLeft="8dp"
      android:paddingStart="8dp"
      android:paddingTop="8dp"
      android:text="@+id/tag_feeds"
      android:textColor="#808080"
      android:textSize="12sp"/>

   <include
      layout="@layout/top_shadow"
      android:layout_below="@+id/tag_feeds"/>

   <include layout="@layout/shadow"/>

</RelativeLayout>
