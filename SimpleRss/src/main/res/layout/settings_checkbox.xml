<merge xmlns:android="http://schemas.android.com/apk/res/android">

   <TextView
      android:id="@+id/check_title"
      android:text="@+id/check_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="6dp"
      android:layout_marginLeft="6dp"
      android:layout_marginEnd="6dp"
      android:layout_marginRight="6dp"
      android:layout_marginTop="4dp"
      android:textAppearance="@android:style/TextAppearance.Medium"
      android:textColor="#000000"
      android:layout_toStartOf="@+id/checkbox"
      android:layout_toLeftOf="@+id/checkbox"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>

   <TextView
      android:id="@+id/check_summary"
      android:text="@+id/check_summary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="6dp"
      android:layout_marginStart="6dp"
      android:layout_marginRight="6dp"
      android:layout_marginEnd="6dp"
      android:layout_marginBottom="4dp"
      android:textAppearance="@android:style/TextAppearance.Small"
      android:textColor="#323232"
      android:layout_below="@+id/check_title"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"/>

   <CheckBox
      android:id="@+id/checkbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:layout_marginRight="20dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"/>

   <ImageView
      android:id="@+id/divider_norm"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="4dp"
      android:layout_below="@+id/check_summary"
      android:scaleType="fitXY"
      android:src="@drawable/divider_settings_light"/>
</merge>